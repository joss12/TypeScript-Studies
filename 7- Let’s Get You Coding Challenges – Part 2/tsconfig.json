{
  "compilerOptions": {
    "target": "ES2016",                                 
    "module": "CommonJS",                            
    "rootDir": "./src",                                 
    "sourceMap": true,                              
    "outDir": "./dist",                                
    "removeComments": true,                         
    "noEmitOnError": true,                          
    "strict": true,   
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true
  }
}
