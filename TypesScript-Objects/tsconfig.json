{
  "compilerOptions": {
    "target": "es2016",  
    "module": "commonjs",                                
    "rootDir": "./src",                                                             
    "outDir": "./dist",                                  
    "removeComments": true,                          
    "noEmitOnError": true,                           
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "preserveConstEnums": true            
  }
}